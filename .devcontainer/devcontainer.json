{
  "name": "RSVP App (Docker Compose)",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspaces/rsvp-priority",
  "forwardPorts": [5000],
"features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
        "moby": false
    },
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts"
    }
  },
  "postCreateCommand": "npm install -g @anthropic-ai/claude-code && echo 'Codespace is ready!'"
}